 	<ul>
   		<% @users.each do |user| %>	   
		   	<li>
		    <p>
		    <% if user.id != current_user.id && @event.user_id != user.id %>
		      	<% @invited.each do |invited| %>
		      		<% if invited.user2_id != user.id %>
						<% @invite_event = InviteEvent.new %>
						<%= form_for @invite_event do |f| %>
							<%= f.hidden_field :user1_id, :value => current_user.id %>
							<%= f.hidden_field :user2_id, :value => user.id %>
							<%= f.hidden_field :event_id, :value => @event.id %>
							<%= f.hidden_field :status, :value => 'pending' %>
							<strong><%= link_to user.first_name, user_path(user) %></strong>
							<%= f.submit "Add" %>
						<% end %>	
					<% end %>	
			  	<% end %>		
		    </p> 
		    </li>	
			<% end %> 
		<% end %>	  
  </ul> 
