<!DOCTYPE html>
<html>
<head>
  <title>Unibook</title>
  <%= stylesheet_link_tag  "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <% if notice %>
	  <p class="alert alert-success"><%= notice %></p>
	  <% end %>
	  <% if alert %>
	  <p class="alert alert-danger"><%= alert %></p>
  <% end %>
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
    <div class="container">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to "Unibook", root_path, class: 'navbar-brand' %>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">

                <li><%= link_to 'Members', users_path %></li>
                <li><%= link_to 'Universities', universities_path %></li>
                <% if current_user %>
                <li><%= link_to 'Profile',current_user %></li>
                <li><%= link_to 'Events', events_path %></li>
                <li><%= link_to 'Edit Profile',edit_user_registration_path %></li>
                <li><%= link_to 'Logout', destroy_user_session_path, method: :get %></li>
                <li class="round-image-50"><%= image_tag(current_user.avatar.url(:icon)) %></li>
                <% else %>
                <li><%= link_to 'Login', new_user_session_path %></li>
                <% end %>
            </ul>
        </div>
    </div>
</nav>
<div "body" style="margin-left:20px;">
    <%= yield %>
</div>

</body>
</html>
